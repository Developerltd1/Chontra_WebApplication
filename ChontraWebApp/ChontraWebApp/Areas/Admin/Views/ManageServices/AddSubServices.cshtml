                        </div>
                    }
                    <!--STAGE-->
                    if (Model.Services_ID == 2)
                    {
                        @Html.Partial("PartialAddSub_Stage")
                    }
                    <!--PHOTOGRAPHY-->
                    if (Model.Services_ID == 4)
                    {
                        <div class="card">
                            <div class="card-header"> Add New Photography Package </div>
                            <div class="card-body">
