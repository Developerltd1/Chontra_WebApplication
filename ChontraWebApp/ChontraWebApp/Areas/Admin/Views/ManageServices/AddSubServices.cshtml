}
@section styles{
    <style>
            form ol {
                padding-left: 0;
            }
            form li, div > p {
                background: white;
                display: flex;
                justify-content: space-between;
                margin-bottom: 10px;
                list-style-type: none;
                border: 1px solid black;
            }
