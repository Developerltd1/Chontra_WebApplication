                    {
                        <div class="card">
                            <div class="card-header">
                                Add New Waiter
                            </div>
                            <div class="card-body">
                                <!-- your content-->
                                @using (Html.BeginForm("AddSubServices", "ManageServices", FormMethod.Post, new { enctype = "multipart/form-data", @onsubmit = "return validation()" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row">

                                        <!--SubServiceTitle-->
                                        <div class="col-md-12">
