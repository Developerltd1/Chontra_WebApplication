@model dynamic
@{
    BusinessLayerLibrary.ManagClass.MngList _Lst = new BusinessLayerLibrary.ManagClass.MngList();
    var _LstSubStage = _Lst.GetSubServices_ForStage();
}

<div class="row mt-4">
    <div class="col-sm-12">
        <div class="card box-shadow">

            <h4 class="card-header">
                @Html.ActionLink("Create New", "AddSubServices", "ManageServices", new { id = 2 }, new { @class = "btn btn-primary btn-sm mdi mdi-table-edit" })
                <div> Stages List </div>
            </h4>

            <div class="card-body">
                <table id="datatable" class="table table-bordered dt-responsive nowrap  text-center" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th style="width: 3%">S.No</th>
                            <th style="width: 15%">Type</th>
                            <th>Stage Title</th>
                            <th style="width: 10%">Image</th>
                            <th style="width: 10%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int increment1 = 0;
                            foreach (var item in _LstSubStage)
                            {
                                increment1++;
                                <tr>
                                    <td>@increment1</td>
                                    <td>@item.SubServiceTitle</td> <!--as SubServiceTitle-->
                                    <td>@item.ServicesPictureTitle</td>
                                    <td><img src="@item.ServicesPicturePath" alt="" height="40"></td>
                                    <td>
                                        <a @*data-url='@Url.Action("EditCustomerPartial", "ManageCustomer")' data-id="@rrrow["SliderID"]"*@ class="btn btn-warning btn-sm mdi mdi-pencil btnEdit" title="Update">
                                            <i class="fa fa-pencil-alt"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm mdi mdi-delete-off-outline" title="Change Status" @*data-url='@Url.Action("EditCustomerPartial", "ManageCustomer")' data-id="@rrrow["SliderID"]"*@>
                                        </a>

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->