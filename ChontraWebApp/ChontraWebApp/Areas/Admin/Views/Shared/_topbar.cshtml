
<header id="page-topbar">
    <div class="navbar-header">
        <div class="d-flex">
            <!-- LOGO -->
            <div class="navbar-brand-box">
                <a href="@Url.Action("Dashboard", "Dashboard","Admin")" class="logo logo-light">
                    <span class="logo-sm">
                        <img src="/Areas/Admin/Contents/AdminContent/assets/images/logo-sm.png" alt="" height="30">
                    </span>
                    <span class="logo-lg">
                        <img src="/Areas/Admin/Contents/AdminContent/assets/images/logo-light.png" alt="" height="30">
                    </span>
                </a>
            </div>


            <button type="button" class="btn btn-sm px-3 font-size-24 header-item waves-effect" id="vertical-menu-btn">
                <i class="mdi mdi-menu"></i>
            </button>

        </div>
        <h4 class="text-uppercase mt-1 d-none d-sm-block topbar-heading">
            @Session["Organization"]
        </h4>
        <div class="d-flex">
            <div class="dropdown d-none d-lg-inline-block">
                <button type="button" class="btn header-item noti-icon waves-effect" data-toggle="fullscreen">
                    <i class="mdi mdi-fullscreen"></i>
                </button>
            </div>
           
            <div class="dropdown d-inline-block">
                <button type="button" class="btn header-item waves-effect" id="page-header-user-dropdown"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                   @{ Session["ProfileImage"] = "/Areas/Admin/Images/Web_Images/No_Image_Available.jpg";}
                    @if (@Session["ProfileImage"].ToString() == "/Areas/Admin/Images/Web_Images/No_Image_Available.jpg")
                    {
                        <img class="rounded-circle header-profile-user" src="~/Areas/Admin/Contents/AdminContent/assets/images/users/user.png"
                             alt="Header Avatar">
                    }
                    else if (String.IsNullOrEmpty(@Session["ProfileImage"].ToString()))
                    {
                        <img class="rounded-circle header-profile-user" src="~/Areas/Admin/Contents/AdminContent/assets/images/users/user.png"
                             alt="Header Avatar">

                    }
                    else
                    {
                        <img class="rounded-circle header-profile-user" src="@Session["ProfileImage"]"
                             alt="Header Avatar">

                    }

                    <span>
                        @Session["UETUserName"]
                    </span>
                </button>

                <div class="dropdown-menu dropdown-menu-right">
                    <!-- item-->

                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item text-danger" id="btnLogout" href="@Url.Action("EditInfo","ManageUsers", new { id=@Session["UserID"]})"><i class="bx bx-power-off font-size-17 align-middle mr-1 text-danger"></i>Edit Profile</a>
                    <a class="dropdown-item text-danger" id="btnLogout" href="@Url.Action("LogOff","Login", new { area="Admin"})"><i class="bx bx-power-off font-size-17 align-middle mr-1 text-danger"></i> Logout</a>
                </div>
            </div>
        </div>
    </div>
</header>